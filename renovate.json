{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "group:all"
    ],
    "packageRules": [
        {
            "matchPackagePatterns": "*",
            "commitMessagePrefix": "{{#if (equals depType 'devDependencies')}}choredev(deps):{{/if}}{{#if (equals depType 'dependencies')}}chore(deps):{{/if}}"
        }
    ]
}
