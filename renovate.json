{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "group:all"
    ],
    "packageRules": [
        {
            "matchDepTypes": [
                "*"
            ],
            "commitMessagePrefix": "{{#if (equals depType 'dependencies')}}{{#if (equals depType 'devDependencies')}}chore(deps):{{#else}}choredev(deps):{{/if}}{{#else}}choredev(deps):{{/if}}"
        }
    ]
}
