{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "group:all"
    ],
    "packageRules": [
        {
            "matchDepTypes": [
                "devDependencies",
                "dependencies"
            ],
            "commitMessagePrefix": "{{#if (equals depType 'dependencies')}}{{#if (equals depType 'devDependencies')}}chore(deps):{{/if}}{{/if}}"
        },
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "commitMessagePrefix": "{{#if (equals depType 'devDependencies')}}choredev(deps):{{/if}}"
        }
    ]
}
