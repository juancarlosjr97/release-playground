{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "group:all"
    ],
    "packageRules": [
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "prPriority": 5,
            "commitMessagePrefix": "choredev(deps):"
        },
        {
            "matchDepTypes": [
                "dependencies",
                "devDependencies"
            ],
            "prPriority": -1,
            "commitMessagePrefix": "chore(deps):"
        }
    ]
}
