{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "group:all"
    ],
    "packageRules": [
        {
            "matchDepTypes": [
                "dependencies",
                "devDependencies"
            ],
            "commitMessagePrefix": "{{#if (equals depType 'dependencies')}}{{#if (equals depType 'devDependencies')}}chore(deps):{{else}}chore(deps):{{/if}}{{else}}{{#if (equals depType 'devDependencies')}}choredev(deps):{{/if}}choredev(deps):{{/if}}"
        }
    ]
}
